# Flask Configuration
FLASK_ENV=production
SECRET_KEY=change-this-to-a-long-random-string-in-production
DEBUG=False

# Application Settings
CTF_NAME=My CTF Event
CTF_DESCRIPTION=An awesome CTF competition
REGISTRATION_ENABLED=True

DECAY_FUNCTION=logarithmic

# Database Configuration (for Docker deployment)
DATABASE_HOST=db
DATABASE_PORT=3306
DATABASE_NAME=dbname
DATABASE_USER=user
DATABASE_PASSWORD=password
DATABASE_URL=mysql+pymysql://user:password@db:3306/dbname

# MySQL Root Password (for Docker)
MYSQL_ROOT_PASSWORD=root

# Redis Configuration (for Docker deployment)
REDIS_HOST=cache
REDIS_PORT=6379
REDIS_URL=redis://cache:6379/0

# File Upload Settings
UPLOAD_FOLDER=/var/uploads
MAX_UPLOAD_SIZE=52428800
ALLOWED_EXTENSIONS=txt,pdf,zip,png,jpg,jpeg,gif,tar,gz,py,c,cpp,java,js,html,css

# Logging
LOG_FOLDER=/var/log/CTFd
ACCESS_LOG=-
ERROR_LOG=-

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Docker-specific settings
AUTO_INIT_DB=false
WITH_SAMPLE_DATA=false
REVERSE_PROXY=true


